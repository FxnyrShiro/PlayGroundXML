<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalculatorButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="CalculatorButton.Operator">
        <item name="android:backgroundTint">@color/calculator_operator_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalculatorButton.Equals">
        <item name="android:backgroundTint">@color/calculator_equals_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalculatorButton.Clear">
        <item name="android:backgroundTint">@color/calculator_clear_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Special style for the ImageButton -->
    <style name="OperatorImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:backgroundTint">@color/calculator_operator_bg</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>